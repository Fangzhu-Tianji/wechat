<view class="container" style="display:{{show}}">
  <view class='bg'>
    <image class='bg-img' src="../../images/userinfo.png" mode="aspectFill"></image>
  </view>
  <view class='user-img'>
    <image class='people' src="{{avatarUrl}}" mode="aspectFill"></image>
    <text class='username'>{{nickName}}</text>
  </view> 
  <view class='section import'>
    <view class='wrap'>
      <view class='info'>
        <image class='icon' src="../../images/user-pay.svg" mode="aspectFill"></image>
        <text>支付记录</text>
      </view>
      <image class='sup' src="../../images/user-more.svg" mode="aspectFill"></image>
    </view>
  </view>
  <view class='section'>
    <view class='wrap'>
      <view class='info'>
        <image class='icon' src="../../images/user-pay.svg" mode="aspectFill"></image>
        <text>我的评测</text>
      </view>
      <image class='sup' src="../../images/user-more.svg" mode="aspectFill"></image>
    </view>
    <view class='wrap'>
      <view class='info'>
        <image class='icon' src="../../images/user-pay.svg" mode="aspectFill"></image>
        <text>我的收藏</text>
      </view>
      <image class='sup' src="../../images/user-more.svg" mode="aspectFill"></image>
    </view>
  </view>
</view>