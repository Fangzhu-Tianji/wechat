<scroll-view style="height: 100%" scroll-y  bindscroll='scroll' bindscrolltolower="tolower" >
  <view class="container">
    <view class='wrap' wx:for='{{pix}}' wx:key='*this'>
      <!-- <image src='{{item}}' data-src='{{item}}' mode='aspectFill'></image> -->
      <view data-src='{{item}}' style="width: 100%;height: 100%;background:url('{{item}}') no-repeat center top;background-size: cover;" bindtap='previewImage'></view>
    </view>
  </view>
  <image wx:if="{{show}}" class='loading' src='../../images/loading.gif' mode='aspectFill'></image> 
</scroll-view>
