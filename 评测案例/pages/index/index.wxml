<!--index.wxml-->
<view class="container">
  <view class="selection">
    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <block wx:for="{{imgUrls}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  </view>

  <view class="selection">

    <view class="header">
      <text>精品推荐</text>
      <text class="text-all">全部精品</text>
    </view>

    <view class="content">
      <view class="content-item" wx:for="{{contentItem}}" wx:key="*this">
        <image src="{{item.image}}" mode="aspectFill" />
        <view class="content-item-text">
        <text>{{item.title}}</text>
        </view>
      </view>
    </view>

  </view>

  <view class="selection">

    <view class="header">
      <text>热门评测</text>
      <text class="text-all">全部评测</text>
    </view>

    <view class="list-item" wx:for="{{listItem}}" wx:key="*this">
      <view class="list-item-images">
        <image class='img' src="{{item.image}}" mode="aspectFill" />
        <image class='avatar' src="{{item.userimg}}" mode="aspectFill" />
      </view>
      <view class="list-item-text">
        <view class="list-item-text-title">
          <text>{{item.title}}</text>
        </view>
        <view class="list-item-text-content">
          <text>{{item.content}}</text>
        </view>
      </view>
    </view>


  </view>


</view>
