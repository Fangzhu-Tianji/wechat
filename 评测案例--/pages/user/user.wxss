page {
  background-color: #f6f6f6;
}
.bg {
  position: relative;
  width: 100%;
  height: 200rpx;
  /* background: rgba(0,0,0,.5); */
}
.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  /* z-index: -1; */
  width: 100%;
  height: 200rpx;
  /* -webkit-filter: blur(10px); */
}
.user-img {
  width: 100%;
  height: 150rpx;
  position: relative;
}
.user-img .people {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  position: absolute;
  top: -65rpx;
  left: 40rpx;
}
.user-img .username {
  position: absolute;
  top: 20rpx;
  left: 280rpx;
  color: #e60012;
  font-size: 34rpx;

  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.import {
  margin-bottom: 30rpx;
}
.section {
  box-sizing: border-box;
  width: 100%;
  padding: 0 35rpx;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  border-left: none;
  border-right: none;
}
.section .wrap {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px solid #f6f6f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section .wrap:last-child {
  border-bottom: none;
}
.section .wrap .info {
  height: 90rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section .wrap .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.section .wrap text {
  font-size: 34rpx;
  color: #333;
}
.section .wrap .sup {
  width: 30rpx;
  height: 30rpx; 
}