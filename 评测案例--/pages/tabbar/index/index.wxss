/**index.wxss**/
.swiper {
  width: 100%;
  height: 480rpx;
}
.swiper .slide-image {
  width: 100%;
  height: 100%;
}
.header {
  box-sizing: border-box;
  width: 100%;
  height: 48rpx;
  border-left: 2px solid #35b558;
  padding: 0 25rpx;
  margin: 28rpx 0 15rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header text {
  font-size: 14px;
  color: #333;
}
.header .text-all {
  font-size: 12px;
  color: #35b558;
}
.content {
  box-sizing: border-box;
  width: 100%;
  padding: 0 3% 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 10rpx solid #edeef2;
}
.content-item {
  width: 48.3%;
  height: 230rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.content-item image {
  width: 100%;
  height: 100%;
}
.content-item-text {
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  padding: 0 0 2% 4%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  display: flex;
  align-items: flex-end;
}
.content-item-text text {
  color: #fff;
  font-size: 12px;

  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.list-item-images {
  width: 100%;
  height: 280rpx;
  position: relative;
}
.list-item-images .img {
  width: 100%;
  height: 100%;
}
.list-item-images .avatar {
  width: 66rpx;
  height: 66rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  position: absolute;
  right: 40rpx;
  bottom: -33rpx;
}
.list-item-text {
  padding: 0 25rpx;
}
.list-item-text-title {
  color: #333;
  font-size: 14px;
  font-weight: bold;
  padding: 30rpx 0 20rpx 0;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.list-item-text-content {
  color: #666;
  font-size: 12px;
  padding-bottom: 60rpx;
}
.list-item-text-content text {
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}