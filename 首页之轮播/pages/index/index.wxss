/**index.wxss**/
page {
  background: pink;
}
.container {
  width: 80%;
  margin: 0 auto;
}
swiper {
  width: 100%;
  height: 500rpx;
  background-color: yellowgreen;
}
swiper image {
  width: 100%;
  height: 300rpx;
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 30px;
}
swiper .wx-swiper-dot{
    width: 40rpx;
    display: inline-flex; 
    height: 40rpx;
    border-radius: 50%;
    /* margin-left: 20rpx; */
    justify-content:space-between;
}
swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 50%
}
swiper .wx-swiper-dot-active::before{
    background:rgba(244,0,0,0.8);   
}