<!--index.wxml-->
<view class="container">
  <view class="logo-wrap">
    <view class="content">
      <view class="txt">
        <view class="name">金千禧金融控股</view>
        <view class="slogan">金融投资  多元产业</view>
      </view>
      <image class="logo" src="../../images/logo.jpg" mode="aspectFill"></image>
    </view>
  </view>

  <view class="con-wrap">
    <view class="item" bindtap="openMap">
      <image class="pic" src="../../images/map.png" mode="aspectFit"></image>
      <text class="txt">深圳市福田区益田路6001号太平金融大厦28楼</text>
      <image class="more" src="../../images/user-more.svg" mode="aspectFill"></image>
    </view>
    <view class="item">
      <image class="pic" src="../../images/time.png" mode="aspectFit"></image>
      <text class="txt">工作日 9:00-18:00</text>
    </view>
    <view class="item" bindtap="openTel">
      <image class="pic" src="../../images/tel.png" mode="aspectFit"></image>
      <text class="txt">0755-23947300</text>
      <image class="more" src="../../images/user-more.svg" mode="aspectFill"></image>
    </view>
    <view class="item">
      <image class="pic" src="../../images/image.png" mode="aspectFit"></image>
      <text class="txt">企业相册</text>
    </view>
    <view class="photo-wrap">
      <image wx:for="{{companyImg}}" wx:key="*this" src="{{item}}" data-src="{{item}}" mode="aspectFill" bindtap="openImg"></image>
    </view>
  </view>
</view>
