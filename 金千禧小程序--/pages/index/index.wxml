<view class="container">
  <swiper class='swiper' indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
